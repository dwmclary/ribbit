<div class="row">
    <div class="span12">
        <% for u in @users %>
            <div class="row">
                <div class="span4">
                    <strong><%= u.email %></strong>
                </div>
                <div class="span4">
                    <%= link_to "Edit", edit_user_path(u) %>
                </div>
                <div class="span4">
                    <%= link_to "Delete", {:controller => "users", :action => "destroy", :id => u.id}, :method => :delete %>
                </div>
            </div>
        <% end %>
    </div>
</div>
<%= will_paginate @users, :class=>"pagination" %>