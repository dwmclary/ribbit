<div class="container-fluid" style="margin-top:10px">
    <div id="link-modal-from-dom" class="modal hide fade in">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">Ã—</a>
            <h3>Add Link</h3>
        </div>
        <div class="modal-body">
            <div class="row-fluid">
            <%= form_for @hyperlink do |f| %>
                    <%= f.label :link_text, "Link to", :style=> "margin-right:10px"%>
                    <%= f.text_field :link_text %>
                    <%= f.hidden_field :user_id, :value => current_user.id%>
                    <%= f.hidden_field :artist_id, :value => @a.id %>
                    <%= f.submit "Add" %>
            <% end %>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span3">
            <%= image_tag @a.photo.url(:large)%>
        </div>
    
        <div class="span6", style="padding-left:10%">
            <div class="row">
                <div class="span-one-third" style="margin-bottom:10px">
                    <strong><%= @a.name %></strong>
                </div>
            </div>
            <div class="row">
                <div class="span-one-third" style="margin-bottom:10px">
                    <%= @a.gender%>
                </div>
            </div>
            <div class="row">
                <div class="span-one-third" style="margin-bottom:10px">
                    <%= @a.born%>-<%=@a.died%>
                </div>            
            </div>
            <div class="row">
                <div class="span-one-third" style="margin-bottom:10px">
                    <%= @a.birthplace%>
                </div>
            </div>
            <div class="row">
                <div class="span-one-third" style="margin-bottom:10px">
                    <%= @a.biography%>
                </div>
            </div>    
        </div>
    </div>
    <a data-toggle="modal" href="#link-modal-from-dom" style="width:10%; margin-top:10px" class="btn">Add Link</a>
    <%= render "link_table"%>
    <div class="row-fluid">
        <div id="artistCarousel" class="carousel" style="margin-top:10px">
          <!-- Carousel items -->
          <div class="carousel-inner">
            <% first_image = true %>
            <% for piece in @a.pieces %>
                <% if first_image %>
                    <div class="item active">
                    <% first_image = false%>
                <% else %>
                    <div class="item">
                <% end %>
                    <a href="<%=piece_path(piece)%>"><img src="<%=piece.photo.url(:large)%>" style="display: block;   margin-left: auto;   margin-right: auto;" alt></a>
                    <div class="carousel-caption span2 offset4">
                        <h4> <%= piece.title%> </h4>
                        <p> <%= piece.artist.name%> </p>
                    </div>
                </div>
            <% end %>
          </div>
          <!-- Carousel nav -->
          <a class="carousel-control left" href="#artistCarousel" data-slide="prev">&lsaquo;</a>
          <a class="carousel-control right" href="#artistCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
</div>