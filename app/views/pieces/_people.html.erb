<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Person</th>
            <th>Affiliation</th>
        </tr>
    </thead>
    <tbody>
        <% for person in @p.people %>
        <tr>
            <td> <%= link_to person.name, person %> </td>
            <td> <%= person.affiliation %> </td>
        </tr>
        <% end %>
    </tbody>
</table> 