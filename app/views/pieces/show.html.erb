<!--  modal content -->
<div id="modal-from-dom" class="modal hide fade">
  <div class="modal-header">
    <a href="#" class="close">&times;</a>
    <h3>Edit Object</h3>
  </div>
  <div class="modal-body">
      <%= render "piece_form"%>
  </div>
</div>
    <ul class="tabs" data-tabs="tabs">
        <li class="active"><a href="#basic_info">Basic Information</a></li>
        <li><a href="#dims">Dimensions</a></li>
        <li><a href="#packing">Packing and Storage</a></li>
        <li><a href="#loans">Loan Information</a></li>
        <li><a href="#hanging">Installation</a></li>
        <li><a href="#notes">Notes</a></li>
    </ul>
    <div class="container-fluid">
        <div class="sidebar">
            <%= image_tag @p.photo.url(:large)%>

        </div>
        <div class="content">
            <div id="my-tab-content" class="tab-content">
                <div class="active tab-pane" id="basic_info" style="font-size:20px">
                    <%= render "basic_info"%>
                </div>
                <div class="tab-pane" id="dims" style="font-size:20px">
                    <%= render "dimensions"%>
            </div>
                <div class="tab-pane" id="packing" style="font-size:20px">
                    <%= render "packing_info"%>
            </div>
                
                <div class="tab-pane" id="loans" style="font-size:20px">
                    <%= render "loans"%>
            </div>
                
                <div class="tab-pane" id="notes" style="font-size:20px">
                    <%= render "notes"%>
                </div>
          
                <div class="tab-pane" id="hanging" style="font-size:20px">
                    <%= render "hanging" %>
                </div>
            </div>
            <div class="row"style="position:absolute; top: 100%;">
            <a class="btn large info" data-controls-modal="modal-from-dom" data-backdrop="static", style="width:10%; margin-bottom:10px">Edit Object</a>
            <%= link_to "Add Event", new_piece_event_path(@p), :class => "btn large info",:style=> "width:10%; margin-bottom:10px" %>
            <%= link_to "Add Image", pieces_path, :class => "btn large info",:style=> "width:10%; margin-bottom:10px" %>
            <%= link_to "View Gallery", pieces_path, :class => "btn large info",:style=> "width:10%; margin-bottom:10px" %>
            </div>
        </div>
    </div>    
    



