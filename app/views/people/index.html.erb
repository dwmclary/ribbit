<table class="table table-striped table-condensed" id="pieceEventIndexTable"> 
    <thead> 
        <tr> 
	        <th>Name</th> 
	        <th>Affiliation</th>
	        <th>Edit</th>
	        <th>Delete</th>
        </tr> 
    </thead> 
    <tbody>

<% for p in @people %>
    <tr>
        <td>
            <%= link_to p.name, person_path(p)%>
        </td>
        <td>
            <a href="<%=person_path(p)%>" rel="popover" data-content="<%=p.details%>"><%= p.affiliation %></a>
                      <script>
                        $(function () {
                          $("a[rel=popover]")
                            .popover({
                              offset: 10
                            })
                            .click(function(e) {
                              e.preventDefault()
                            })
                        })
                      </script>
        </td>
        <td>
            <%= link_to "Edit", edit_person_path(p), :class => "btn"  %>
        </td>
        <td>
            <%= link_to "Delete", person_path(p), :method=>:delete, :class => "btn btn-danger", :confirm => "Are you sure?" %>
        </td>
    </tr>
<% end %>
    </tbody>
</table>
